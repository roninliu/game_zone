<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <TextView
        android:id="@+id/my_accout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/icon_person"
        android:drawablePadding="5dp"
        android:text="@string/my_accout_txt"
        android:textSize="14sp" />

    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/my_accout_title"
        android:background="#ccc" />

    <TextView
        android:id="@+id/account_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line_1"
        android:layout_below="@+id/line_1"
        android:layout_marginTop="14dp"
        android:text="@string/account_balance_txt" />

    <TextView
        android:id="@+id/money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recharge_history_btn"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/money_price"
        android:text="100" />

    <TextView
        android:id="@+id/money_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/money"
        android:layout_alignBottom="@+id/money"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/recharge_history_btn"
        android:text="元" />

    <Button
        android:id="@+id/recharge_history_btn"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/account_balance_title"
        android:layout_alignBottom="@+id/account_balance_title"
        android:layout_alignRight="@+id/line_1"
        android:background="@drawable/button_style"
        android:text="充值记录"
        android:textSize="12sp" />

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignRight="@+id/recharge_history_btn"
        android:layout_below="@+id/recharge_history_btn"
        android:layout_marginTop="20dp"
        android:background="#ccc" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line_2"
        android:layout_below="@+id/line_2"
        android:layout_marginTop="19dp"
        android:text="购买记录" />

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/line_2"
        android:layout_below="@+id/line_2"
        android:background="@drawable/button_style"
         android:textSize="12sp"
        android:text="查询记录" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/money"
        android:text="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/money_price"
        android:text="个" />

</RelativeLayout>